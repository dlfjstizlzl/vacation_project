<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mapActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clKakaoMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AAAAAA"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/qrbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="QR코드로 대야하기"
        android:textColor="@color/white"
        android:fontFamily="@font/suitmedium"
        android:id="@+id/qrbutton"

        android:paddingLeft="115dp"
        android:drawableStart="@drawable/qr_code_scanner"
        android:drawablePadding="-120dp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>