<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TumblrActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대여하실 텀블러\n선택해주세요"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="121dp"
        android:layout_marginStart="17dp"
        android:fontFamily="@font/premeduim"
        />

    <TextView
        android:id="@+id/tumblr2"
        android:layout_width="83dp"
        android:layout_height="151dp"
        android:background="#D9D9D9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="275dp"
        android:text="텀블러2"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="83dp"
        android:layout_height="151dp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tumblr2"

        android:layout_marginTop="275dp"
        android:layout_marginEnd="25dp"
        android:text="텀블러1"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="83dp"
        android:layout_height="151dp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tumblr2"

        android:layout_marginTop="275dp"
        android:layout_marginStart="25dp"
        android:text="텀블러3"
        android:textSize="16sp"/>





</androidx.constraintlayout.widget.ConstraintLayout>