<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewregisterActivity">
    <LinearLayout
        android:id="@+id/toparea"
        android:layout_width="match_parent"
        android:layout_height="81dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_back_ios_new"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="284dp"
        app:layout_constraintTop_toBottomOf="@id/toparea"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일을 입력해주세요."
            android:textSize="22dp"
            android:fontFamily="@font/nanumextrabold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="52dp"
            />
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:layout_marginStart="16dp"
            android:layout_marginTop="42dp"
            android:textColor="@color/black"
            android:fontFamily="@font/suitmedium"
            />
        <EditText
            android:id="@+id/input_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_grayoutline"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="8dp"
            android:paddingLeft="14dp"

            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"

            android:hint="이메일"
            android:textColorHint="#ACACAC"
            android:textSize="14sp"
            android:fontFamily="@font/suitmedium"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/nextbutton"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            app:layout_constraintTop_toBottomOf="@id/cb_autologin"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/loginbutton"


            android:text="다음"
            android:fontFamily="@font/suitmedium"
            android:textColor="@color/white"
            android:textSize="17dp"

            />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>